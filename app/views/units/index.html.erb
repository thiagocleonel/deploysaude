<p id="notice"><%= notice %></p>

<h1>Unidades de Atendimento</h1>

<table class="table">
  <thead>
    <tr>
      <th >Nome</th>
      <th >Endereço</th>
      <th >Telefone</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.address %></td>
        <td><%= unit.phone %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

