        </div>
          <div class="col-md-6">
              <label for:"person_document">Documento</label>
            <%= f.text_field :document, autofocus: true, autocomplete: "document",class: "input form-control form-control-lg", placeholder: "Documento", :required => true %>
    </div>
              </div>

      </div>

      <div class="row">
        <div class="form-group ">
          <div class="col-md-4">
            <label for:"person_cep">CEP</label>
            <%= f.text_field :cep, autofocus: true, autocomplete: "name",class: "input form-control form-control-lg", placeholder: "CEP" %>
          </div>
            <div class="col-md-4">
                <label for:"person_street">Endereço</label>
              <%= f.text_field :street, autofocus: true, autocomplete: "document",class: "input form-control form-control-lg", placeholder: "Endereço", :required => true %>
      </div>
      <div class="col-md-4">
          <label for:"person_number">Numero</label>
        <%= f.text_field :number, autofocus: true, autocomplete: "document",class: "input form-control form-control-lg", placeholder: "Número", :required => true %>
</div>
                </div>

        </div>

        <div class="row">
          <div class="form-group ">
            <div class="col-md-4">
              <label for:"person_email">Email</label>
              <%= f.text_field :email, autofocus: true, autocomplete: "name",class: "input form-control form-control-lg", placeholder: "E-mail" %>
            </div>
              <div class="col-md-4">
                  <label for:"person_phone">Telefone</label>
                <%= f.text_field :phone, autofocus: true, autocomplete: "document",class: "input form-control form-control-lg", placeholder: "Telefone", :required => true %>
        </div>
        <div class="col-md-4">
            <label for:"person_other">Outro</label>
          <%= f.text_field :other, autofocus: true, autocomplete: "document",class: "input form-control form-control-lg", placeholder: "..." %>
  </div>
                  </div>

          </div>






