<p id="notice"><%= notice %></p>

<h1>Listando Pessoas Físicas</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Endereço</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%=  person.email%></td>
        <td><%=  truncate(person.street) %></td>
        <td><%= link_to 'Exibir', person %></td>
        <td><%= link_to 'Editar', edit_person_path(person) %></td>
        <td><%= link_to 'Remover', person, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Pessoa Física', new_person_path, class: "btn btn-danger"  %>
